<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EnquiryActivity">

    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_26"
        android:id="@+id/enqu_ll_touone"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_28">
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@mipmap/back"
        android:id="@+id/enquiry_iv_back"
        ></ImageView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_26"
        android:id="@+id/enqu_ll_toutwo"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_28">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/common_nav_message_black_n"
            android:id="@+id/enquiry_iv_xiaoxin"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:orientation="horizontal"
        android:id="@+id/enquiry_ll_one"
        android:layout_below="@id/enqu_ll_touone"
        android:layout_marginTop="@dimen/dp_10"
        >
        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            app:tabTextColor="@color/hui"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            android:paddingLeft="@dimen/dp_20"
            app:tabSelectedTextColor="@color/blue"
            app:tabIndicatorColor="@color/white"
            android:id="@+id/enquiry_tl_huodong"
            android:layout_weight="9"
            ></com.google.android.material.tabs.TabLayout>
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_24"
            android:id="@+id/enquiry_iv_sousuo"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:src="@mipmap/common_icon_search_n"
            ></ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_below="@id/enquiry_ll_one"
        android:id="@+id/enquiry_v_one"
        android:background="#f2f2f2"
        ></View>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/enquiry_vp_vper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/enquiry_v_one"
        android:layout_marginTop="21dp"></androidx.viewpager.widget.ViewPager>

</RelativeLayout>