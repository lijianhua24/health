<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_235"
            android:src="@mipmap/login_bg" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/login_email"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"
                android:maxLines="1"
                android:text="xcx485131108@163.com"
                android:textColorHint="#999999"
                android:hint="请输入邮箱账号"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sp_10"
            android:background="@color/hui"
            android:layout_width="@dimen/dp_340"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/login_pwd"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>
            <EditText
                android:text="123456"
                android:id="@+id/et_pwd"
                android:password="true"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"
                android:textColorHint="@color/hui"
                android:hint="请输入密码"
                android:layout_width="@dimen/dp_280"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pwd_bi"
                    android:src="@mipmap/login_pwd_bi"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sp_10"
            android:background="@color/hui"
            android:layout_width="@dimen/dp_340"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/sp_14"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_340"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_centerVertical="true"
                android:textColor="#666666"
                android:textSize="@dimen/sp_10"
                android:text="忘记密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_settled_in"
                android:textColor="@color/blue"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:text="申请入驻"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/btlogin"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_36"/>

</RelativeLayout>