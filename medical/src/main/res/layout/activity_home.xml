<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主要业务"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        ></TextView>

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/common_nav_message_black_n"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_alignParentRight="true"
        android:id="@+id/home_iv_xiaoxi"
        android:layout_marginRight="@dimen/dp_20"
        ></ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/home_rl_wenzheng"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_76"
        >
        <ImageView
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_150"
            android:src="@mipmap/inquiry_bg"
            android:id="@+id/home_iv_wenzheng"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/tip_box"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignBottom="@id/home_iv_wenzheng"
            android:layout_marginBottom="@dimen/dp_20"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="问诊"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/home_iv_wenzheng"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_30"
            ></TextView>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_below="@id/home_rl_wenzheng"
    android:id="@+id/home_rl_dayi"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:src="@mipmap/promise_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/home_iv_dayi"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        ></ImageView>
    <ImageView
        android:layout_width="@dimen/dp_59"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/tip_box"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignBottom="@id/home_iv_dayi"
        android:layout_marginBottom="@dimen/dp_20"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="答疑"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/home_iv_dayi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_30"
        ></TextView>
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的信息"
        android:id="@+id/home_tv_wd"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/home_rl_dayi"
        ></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/home_rl_gerenwd"
        android:layout_below="@id/home_tv_wd"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_150"
            android:src="@mipmap/my_information_bg"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/home_iv_wode"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/tip_box"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignBottom="@id/home_iv_wode"
            android:layout_marginBottom="@dimen/dp_20"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="管理"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/home_iv_wode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_30"
            ></TextView>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_130"
            app:roundedCornerRadius="@dimen/dp_8"
            android:src="@mipmap/e"
            android:id="@+id/home_sdv_touxiang"
            android:layout_below="@id/home_tv_wd"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            ></com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="曾小贤"
            android:textColor="@color/hui"
            android:layout_toRightOf="@id/home_sdv_touxiang"
            android:layout_alignTop="@id/home_sdv_touxiang"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_17"
            android:textStyle="bold"
            android:id="@+id/home_tv_name"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="广东省妇幼保健医院"
            android:textColor="@color/hui"
            android:layout_below="@id/home_tv_name"
            android:layout_toRightOf="@id/home_sdv_touxiang"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/home_tv_yiyuan"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="副主任医师"
            android:textColor="@color/hui"
            android:layout_below="@id/home_tv_yiyuan"
            android:layout_toRightOf="@id/home_sdv_touxiang"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/sp_12"
            android:id="@+id/home_tv_zhicheng"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="小儿科"
            android:textColor="@color/hui"
            android:layout_below="@id/home_tv_zhicheng"
            android:layout_toRightOf="@id/home_sdv_touxiang"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/sp_12"
            android:id="@+id/home_tv_keshi"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_80"

        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ddoctor"
            ></ImageView>
    </RelativeLayout>
</RelativeLayout>