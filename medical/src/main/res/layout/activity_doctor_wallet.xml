<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DoctorWalletActivity">

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/dowallet_iv_back"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hei"
        android:textSize="@dimen/sp_16"
        android:text="我的钱包"
        android:textStyle="bold"
        android:layout_alignTop="@id/dowallet_iv_back"
        android:layout_centerHorizontal="true"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去绑定"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/hei"
        android:id="@+id/dowallet_tv_Bind"
        android:layout_alignTop="@id/dowallet_iv_back"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        ></TextView>
    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_174"
        android:background="@mipmap/my_wallet_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dowallet_iv_back"
        android:layout_marginTop="@dimen/dp_44"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="我的H币"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/sp_48"
            android:text="29870"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_60"
            android:id="@+id/dowallet_tv_balance"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/sp_10"
            android:layout_alignParentBottom="true"
            android:text="（满2000可提现）"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_40"
            ></TextView>
        <Button
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_29"
            android:background="@drawable/doctorwalletbton"
            android:text="提现"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            ></Button>
    </RelativeLayout>

</RelativeLayout>