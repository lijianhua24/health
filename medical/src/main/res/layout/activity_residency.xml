<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResidencyActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/dp_74"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_16"
                android:text="完善信息"
                android:textStyle="bold"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:text="审核通过即可成功入驻"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#F00606"
                android:textSize="@dimen/sp_10"
                android:text="*填写正确信息有助于快速通过审核"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/hui"
                android:textSize="@dimen/sp_14"
                android:text="您的真实姓名"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/residency_biankuang"
                android:layout_marginTop="@dimen/sp_10"
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40">
                <EditText
                    android:id="@+id/settled_name"
                    android:padding="@dimen/sp_10"
                    android:hint="请输入姓名"
                    android:layout_weight="2"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/hui"
                android:textSize="@dimen/sp_14"
                android:text="您所在医院"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/residency_biankuang"
                android:layout_marginTop="@dimen/sp_10"
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40">
                <EditText
                    android:id="@+id/et_yiyuan"
                    android:padding="@dimen/sp_10"
                    android:hint="请输入您所在的医院"
                    android:layout_weight="2"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"/>

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/hui"
                android:textSize="@dimen/sp_14"
                android:text="您所在科室"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/residency_biankuang"
                android:layout_marginTop="@dimen/sp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/et_keshi"
                    android:padding="@dimen/dp_10"
                    android:layout_weight="9"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"/>
                <ImageView
                    android:id="@+id/img_keshi"
                    android:src="@mipmap/settled"
                    android:padding="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/hui"
                android:textSize="@dimen/sp_14"
                android:text="您的职责"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/residency_biankuang"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/et_zhize"
                    android:padding="@dimen/dp_10"
                    android:layout_weight="9"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"/>
                <ImageView
                    android:id="@+id/img_zhize"
                    android:src="@mipmap/settled"
                    android:padding="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/bt_two_next"
                android:layout_marginTop="@dimen/dp_50"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/btlogin"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_300"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_height="@dimen/dp_36"/>

        </LinearLayout>
