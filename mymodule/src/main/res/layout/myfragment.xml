<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/patient_relative_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@mipmap/my_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/common_icon_back_white_n" />

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@mipmap/common_nav_message_white_n" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/mine_activity_iv_user_head_pic"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/dermatology" />

            <TextView
                android:id="@+id/mine_activity_tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="志"
                android:textSize="@dimen/sp_16"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"/>

            <Button
                android:id="@+id/mine_activity_btn_login"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_mashanglogin"
                android:layout_centerVertical="true"
                android:text="登录"
                android:textColor="#3087ea"/>

            <Button
                android:id="@+id/mine_activity_btn_sign_in"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_mashanglogin"
                android:layout_centerVertical="true"
                android:text="签到"
                android:textColor="#3087ea"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@drawable/linear_mashangjinru"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的问诊"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/the_current_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前问诊"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"/>

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="#3087ea"
                android:id="@+id/current"
                android:background="@mipmap/my_icon_next_n"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/historical_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史问诊"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"/>

            <ImageView
                android:id="@+id/history"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="#3087ea"
                android:background="@mipmap/my_icon_next_n"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_350"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/file"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/my_icon_file_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的档案"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_activity_linear_my_money"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/my_icon_wallet_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/common_button_collection_large_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10">
            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/yijian"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@mipmap/my_icon_advice_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="被采纳的建议"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"

                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/my_icon_video_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="我的视频"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@mipmap/my_icon_circle_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="我的病友圈"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/attention"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/common_icon_attention_small_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/mine_activity_iv_my_task"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/my_icon_task_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/mine_activity_iv_set_up"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/my_icon_set_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置管理"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="©八维移动通信学院毕业作品"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
