<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_touxiang"
            android:background="@mipmap/boy"
            android:layout_marginLeft="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp">

        </com.facebook.drawee.view.SimpleDraweeView>
        <EditText
            android:id="@+id/home_sou"
            android:background="@drawable/sou"
            android:hint="病症,药品名称,医生名称"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="260dp"
            android:layout_height="32dp"/>
        <ImageView
            android:id="@+id/home_xiaoxi"
            android:background="@mipmap/common_nav_message_black_s"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>

