<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/hui"
    android:layout_height="match_parent"
    tools:context=".view.FindActivity">
    <ScrollView
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title_layout"/>
            <TextView
                android:text="本模块知识仅供参考,如有需要,请在一声的指导下使用"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textSize="10sp"
                android:textColor="@color/bai"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <LinearLayout
                android:background="@color/bai"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/find_name"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/hei"
                    android:text="小儿清粉黄那颗粒"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[药品成分]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/find_chengfen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[用药禁忌]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_jinji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[功能主治]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_zhuzhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[用法用量]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/find_yongliang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[药品性状]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_xingzhuang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[包装规格]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_guige"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[不良反应]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_fanying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[储藏条件]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_tiaojian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[注意事项]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--<TextView



                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_shixiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[批准文号]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/find_wenhao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>