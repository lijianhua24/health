<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bai"
    android:layout_height="match_parent"
    tools:context=".view.SouActivity">
    <RelativeLayout
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_touxiang"
            android:background="@mipmap/boy"
            android:layout_marginLeft="12dp"
            android:layout_width="32dp"
            android:layout_height="32dp">

        </com.facebook.drawee.view.SimpleDraweeView>
        <EditText
            android:id="@+id/sou_edit"
            android:hint="病症 药品名称"
            android:textSize="12sp"
            android:textColor="@color/hei"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="@color/hei"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/home_touxiang"
            android:layout_marginLeft="10dp"
            android:layout_width="260dp"
            android:layout_marginRight="10dp"
            android:layout_height="32dp"
            android:background="@drawable/searchback"
            />
        <TextView
            android:id="@+id/sou_sou"
            android:text="搜索"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/lan"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_history"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="搜索历史"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/lan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sou_recy"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="热门搜索"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:textColor="@color/lan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.wd.homemodel.utils.XCFlowLayout
            android:layout_marginTop="20dp"
            android:id="@+id/flowlayout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:visibility="gone"
        android:id="@+id/sou_sv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="医生"
                android:id="@+id/sou_tv_doctors"
                android:textColor="@color/lan"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sou_doctors"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="药品"
                android:id="@+id/sou_tv_drug"
                android:layout_marginTop="20dp"
                android:textColor="@color/lan"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sou_drug"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="病症"
                android:id="@+id/sou_tv_Illness"
                android:layout_marginTop="20dp"
                android:textColor="@color/lan"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sou_Illness"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/sou_no"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <com.facebook.drawee.view.SimpleDraweeView
           android:background="@mipmap/no_search_message"
           android:layout_width="150dp"
           android:layout_height="150dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="没有找到头的相关信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>