<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/hui"
    android:layout_height="match_parent"
    tools:context=".view.CmedicinesActivity">
    <androidx.core.widget.NestedScrollView
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title_layout"/>
            <TextView
                android:text="本模块知识仅供参考,如有需要,请在一声的指导下使用"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textSize="10sp"
                android:textColor="@color/bai"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <LinearLayout
                android:backgroundTint="@color/bai"
                android:background="@color/bai"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cmedicines_name"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/hei"
                    android:text="小儿清粉黄那颗粒"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[病理]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/cmedicines_bingli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[症状]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/cmedicines_zhengzhuang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[宜与忌]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--<TextView



                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/cmedicines_yiji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/yiji_wu"
                        android:text="无"
                        android:textColor="@color/hei"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[西药疗治]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
               <!-- <TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/cmedicines_xiyao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/xiyao_wu"
                        android:text="无"
                        android:textColor="@color/hei"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lan"
                    android:text="[中药疗治]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--<TextView
                    android:textColor="@color/hei"
                    android:textSize="12sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/cmedicines_zhongyao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/zhongyao_wu"
                        android:text="无"
                        android:textColor="@color/hei"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>