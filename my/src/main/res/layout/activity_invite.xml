<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/my_invitation_bg"
    tools:context=".activity.InviteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/fanhui"
            android:src="@mipmap/common_icon_back_black_n"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="邀请好友"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/my_invitation_white_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="您的邀请码"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/invate_code"
            android:textSize="16sp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/lightgray"
            android:layout_width="140dp"
            android:layout_height="36dp"/>
        <TextView
            android:text="复制邀请码"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@color/gray"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/erweima_iamge"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            fresco:placeholderImage="@mipmap/zhanwei"
            fresco:failureImage="@mipmap/shibai"
            android:layout_height="120dp"/>
        <TextView
            android:text="邀请好友下载app"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="注册填写上方邀请码    双方可分别获得300H币"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_invate"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="邀请好友"
            android:layout_gravity="center"
            android:layout_marginTop="46dp"
            android:layout_width="230dp"
            android:layout_height="36dp"/>
    </LinearLayout>
</LinearLayout>