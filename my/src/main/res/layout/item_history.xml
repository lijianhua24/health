<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/history_simp"
        android:layout_width="116dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/zhanwei"
        fresco:failureImage="@mipmap/shibai"
        />
    <TextView
        android:id="@+id/history_name"
        android:text="曾小贤"
        android:layout_toRightOf="@id/history_simp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/history_bumen"
        android:text="曾小贤"
        android:layout_toRightOf="@id/history_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/history_shijian"
        android:text="曾小贤"
        android:layout_below="@id/history_name"
        android:layout_toRightOf="@id/history_simp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/history_time"
        android:text="曾小贤"
        android:layout_below="@id/history_name"
        android:layout_toRightOf="@id/history_shijian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/history_btn_history"
        android:layout_toRightOf="@id/history_simp"
        android:layout_below="@id/history_shijian"
        android:layout_marginLeft="20dp"
        android:text="查看问诊记录"
        android:layout_width="84dp"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_corners_blue"
        android:layout_height="34dp"/>
    <Button
        android:layout_toRightOf="@id/history_btn_history"
        android:layout_below="@id/history_shijian"
        android:layout_marginLeft="32dp"
        android:text="去评价"
        android:layout_width="58dp"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_corners_blue"
        android:layout_height="34dp"/>
    <TextView
        android:layout_below="@id/history_simp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/lightgray"
        android:layout_height="5dp"/>
</RelativeLayout>