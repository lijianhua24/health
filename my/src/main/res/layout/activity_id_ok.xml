<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.IdOKActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/fanhui"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@mipmap/common_icon_back_black_n" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="19dp"
            android:text="查看认证信息"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="30dp"
        android:background="@mipmap/my_bank_card">
            <TextView
                android:id="@+id/text_name"
                android:text="张三"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/text_sex"
            android:text="男"
            android:textSize="16sp"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/text_nation"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="58dp"
            android:text="汉族"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/text_number"
         android:text="123456789987654321"
         android:layout_width="wrap_content"
         android:layout_below="@id/text_sex"
         android:layout_marginTop="35dp"
         android:layout_marginLeft="34dp"
         android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>