<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    tools:context=".activity.LoginActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:background="@mipmap/logo"
        android:layout_width="67dp"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="64dp"/>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="224dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/layout_corners"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/login_icon_mail_n" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_toRightOf="@id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:hint="请输入邮箱"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/email"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/login_icon_lock_n" />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:hint="请输入密码"
                android:text="@string/pwd"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:password="true"
                android:layout_toRightOf="@id/lock"
                android:textSize="14sp" />
            <ToggleButton
                android:id="@+id/yanjing"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/lock"
                android:layout_marginLeft="160dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="54dp"
                android:background="@mipmap/login_icon_hide_password_n"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_below="@id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_corners_blue"
            android:text="登录"
            android:textColor="@color/white" />
    </RelativeLayout>
    <TextView
        android:layout_width="260dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:alpha="0.6"
        android:layout_height="8dp"/>
    <TextView
        android:layout_width="240dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:alpha="0.3"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_pwd"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="暂无账号？"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/reg"
            android:text="立即注册"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="——————其他方式登录——————"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/weixin"
        android:background="@mipmap/login_icon_weixin_white_n"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</LinearLayout>