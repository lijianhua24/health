<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.IdCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@mipmap/common_icon_back_black_n" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="19dp"
            android:text="证件照片"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:text="拍摄上传您的二代身份证"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/id_card_front_button_auto"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/id_card_front" />

        <ImageView
            android:id="@+id/id_card_back_button_auto"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:background="@mipmap/id_card_back" />
        <Button
            android:id="@+id/btn_next"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/button_corners_blue"
            android:textColor="@color/white"
            android:text="下一步"
            />
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/button_corners_blue"
            android:textColor="@color/white"
            android:text="确定"
            android:visibility="gone"
            />
    </LinearLayout>


</RelativeLayout>