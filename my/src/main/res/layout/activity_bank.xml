<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BankActivity">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@mipmap/common_icon_back_black_n" />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="19dp"
            android:text="添加银行卡"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/back2"
            android:layout_width="50dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@mipmap/common_icon_back_black_n" />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="19dp"
            android:text="验证银行卡信息"
            android:textSize="16sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/bank_camera"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/rela"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="40dp"
        android:background="@mipmap/bank_card" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/message_bankcard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/bank_camera"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="真实姓名"
                android:textColor="#2F3133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="9"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="到账银行"
                android:textColor="#2F3133"
                android:textSize="16sp" />

            <EditText

                android:id="@+id/pohne_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:background="@null"
                android:inputType="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="银行账号"
                android:textColor="#2F3133"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="9"
                android:background="@null" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bank_msg"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_corners_blue"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        />
    <Button
        android:id="@+id/bank_msg2"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_corners_blue"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        />
</RelativeLayout>