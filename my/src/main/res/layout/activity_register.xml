<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:src="@mipmap/logo" />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/layout_corners"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/email_rg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/login_icon_mail_n" />

            <EditText
                android:id="@+id/edit_email_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/email_rg"
                android:hint="请输入邮箱"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/email"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/button_rg"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/email_rg"
                android:background="@drawable/button_corners_blue"
                android:button="@null"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/yanzhengma_iamge_rg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/register_icon_verification_code_n" />

            <EditText
                android:id="@+id/edit_code_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/yanzhengma_iamge_rg"
                android:hint="请输入验证码"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/lock_rg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/login_icon_lock_n" />

            <EditText
                android:id="@+id/edit_pwd_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/lock_rg"
                android:hint="请输入密码"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:password="true"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/hide_ears"
                android:layout_width="13sp"
                android:layout_height="13sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="54dp"
                android:layout_toRightOf="@id/lock_rg"
                android:background="@mipmap/login_icon_hide_password_n"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:padding="5dp"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/lock_rg2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/login_icon_lock_n" />

            <EditText
                android:id="@+id/edit_pwd_rg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/lock_rg2"
                android:hint="请再次输入密码"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:password="true"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/hide_ears2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="54dp"
                android:layout_toRightOf="@id/lock_rg2"
                android:background="@mipmap/login_icon_hide_password_n"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:padding="5dp"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/lock_rg3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/register_icon_invitatiion_code_n" />

            <EditText
                android:id="@+id/edit_yaoqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/lock_rg3"
                android:hint="请输入邀请码"
                android:inputType="text"
                android:maxEms="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="7dp"
                android:text="选填"
                android:textSize="10sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_below="@id/relativeLayout5"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/button_corners_blue"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:layout_width="260dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0.6"
        android:background="@color/white" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0.3"
        android:background="@color/white" />


</LinearLayout>