<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mysickcircleitem_tiem"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="2019年"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mysickcircleitem_name"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="有新版本更新啦!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mysickcircleitem_text"
            android:textSize="12sp"
            android:layout_below="@id/mysickcircleitem_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="有新版本更新啦!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mysickcircleitem_pinglun"
            android:layout_below="@id/mysickcircleitem_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:textSize="10sp"
            android:textColor="@color/blue"
            android:layout_marginTop="14dp"
            android:text="查看评论  >>"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
