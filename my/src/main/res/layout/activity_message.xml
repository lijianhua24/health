<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MessageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/fanhui"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_icon_back_black_n"
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="消息"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_biaoji"
            android:text="全部已读"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

   <LinearLayout
       android:id="@+id/lin_none"
       android:layout_width="match_parent"
       android:background="@color/lightgray"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:divider="@color/colorBlack"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:background="@color/white"
           android:visibility="visible"
           android:orientation="horizontal"
           >
           <ImageView
               android:id="@+id/image_none"
               android:layout_width="16dp"
                android:layout_marginLeft="10dp"
               android:src="@mipmap/message_icon_close_n"
               android:layout_gravity="center_vertical"
               android:layout_height="16dp"/>
           <TextView
               android:textSize="12sp"
               android:text="打开系统通知，H币入账等消息不错过"
               android:layout_width="wrap_content"
               android:layout_marginLeft="6dp"
               android:layout_gravity="center_vertical"
               android:layout_height="wrap_content"/>
           <Button
               android:id="@+id/btn_none"
               android:text="开启"
               android:background="@drawable/button_corners_blue"
               android:textColor="@color/white"
               android:layout_gravity="center"
               android:layout_marginLeft="30dp"
               android:textSize="10sp"
               android:layout_width="38dp"
               android:layout_height="20dp"/>

       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/system_message"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:src="@mipmap/system_information"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="48dp"/>
        <TextView
            android:text="系统消息"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/wenzhen_message"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:divider="@drawable/div_linealayout_8dp_trandparent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:src="@mipmap/interview_news"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="48dp"/>
        <TextView
            android:text="问诊消息"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/H_message"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:src="@mipmap/recorded_message"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="48dp"/>
        <TextView
            android:text="H币入账消息"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>