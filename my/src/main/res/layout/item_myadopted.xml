<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simp_myadopted"
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_below="@id/simp_myadopted"
        android:text="张三"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_my_01"
        android:text="dsfsfssfsfsfsf"
        android:layout_toRightOf="@id/simp_myadopted"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_my_02"
        android:layout_toRightOf="@id/simp_myadopted"
        android:layout_marginTop="10dp"
        android:text="dsfsfssfsfsfsf"
        android:layout_marginLeft="40dp"
        android:textSize="12sp"
        android:layout_below="@id/text_my_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_my_03"
        android:layout_toRightOf="@id/simp_myadopted"
        android:layout_below="@id/text_my_02"
        android:layout_marginTop="10dp"
        android:text="dsfsfssfsfsfsf"
        android:layout_marginLeft="40dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray"
        android:layout_below="@id/text_my_03"
        android:layout_marginTop="36dp"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/text_myjianyi"
        android:text="我的建议"
        android:layout_below="@id/lines"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/myadopted_jianyi"
        android:layout_below="@id/text_myjianyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/myadopted_jianyi"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</RelativeLayout>