<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WalletActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_wallet_background">

        <RelativeLayout
            android:id="@+id/heead"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fanhui"
                android:src="@mipmap/common_icon_back_white_n"
                android:layout_marginLeft="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="我的钱包"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heead">

            <TextView
                android:id="@+id/Wallet_Amount"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/baiyuan"
                android:gravity="center"
                android:text="1500"
                android:textColor="#3087ea"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Wallet_Amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:text="H币"
                android:textColor="#3087ea"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Wallet_Amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="满2000H币可提现"
                android:textColor="#fff"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aa"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Wallet_withdraw"
                    android:layout_width="58dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bai"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="#3087ea"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/Wallet_Recharge"
                    android:layout_width="58dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bai"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="#3087ea"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="6dp"
    android:background="#f2f2f2"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Wallet_RecyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content" />

</LinearLayout>