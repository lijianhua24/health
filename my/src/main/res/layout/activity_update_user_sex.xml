<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateUserSexActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="选择性别"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_finish_sex"
            android:text="完成"
            android:background="@drawable/button_corners_blue"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="52dp"
            android:layout_height="24dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lightgray" />
    <RelativeLayout
        android:layout_marginTop="72dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:button="@null"
            android:id="@+id/boy01"
            android:background="@mipmap/my_boy"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <ImageView
            android:id="@+id/boy_check01"
            android:layout_width="91dp"
            android:layout_height="21dp"
            android:visibility="gone"
            android:src="@mipmap/my_selected"
            android:layout_below="@id/boy01"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="15dp"
            />
        <CheckBox
            android:id="@+id/gilr01"
            android:button="@null"
            android:layout_toRightOf="@id/boy01"
            android:layout_marginLeft="80dp"
            android:background="@mipmap/girl"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <ImageView
            android:id="@+id/boy_check02"
            android:layout_width="91dp"
            android:layout_height="21dp"
            android:visibility="gone"
            android:src="@mipmap/my_selected"
            android:layout_below="@id/gilr01"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="215dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="男"
            android:textColor="@color/green"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="女"
            android:textColor="@color/red"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="185dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>