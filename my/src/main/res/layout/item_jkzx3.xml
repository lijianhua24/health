<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/layout_corners"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">
 <RelativeLayout
     android:id="@+id/relative_jkzx3"
     android:layout_width="match_parent"
     android:layout_marginTop="10dp"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/message_jkzx3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

     <TextView
         android:id="@+id/writer_jkzx3"
         android:layout_below="@id/message_jkzx3"
         android:layout_width="wrap_content"
         android:text="心理科医生"
         android:textSize="10sp"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/time_jkzx3"
         android:layout_below="@id/message_jkzx3"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:text="10分钟前"
         android:layout_marginTop="10dp"
         android:textSize="10sp"
         android:layout_height="wrap_content"/>
     <TextView
         android:layout_below="@id/writer_jkzx3"
         android:layout_width="match_parent"
         android:layout_height="10dp"/>
 </RelativeLayout>
    <TextView
        android:layout_below="@id/relative_jkzx3"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>