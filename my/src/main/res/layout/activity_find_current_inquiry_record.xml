<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindCurrentInquiryRecordActivity">
    <RelativeLayout
        android:id="@+id/reaaa"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/fanhui"
            android:src="@mipmap/common_icon_back_black_n"
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"/>
        <TextView
            android:text="当前问诊"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/reaaa"
        android:id="@+id/text_lines"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lightgray"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/xrecy_inquiry"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_lines"
        android:layout_height="400dp"/>

    <LinearLayout
        android:id="@+id/linay"
        android:layout_below="@id/xrecy_inquiry"
        android:layout_marginLeft="45dp"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:background="@drawable/layout_corners"
        android:layout_height="122dp"
        >
        <TextView
            android:id="@+id/inquiry_name"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/inquiry_title"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/inquiry_department"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="6dp"
           >
           <TextView
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_marginLeft="70dp"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/inquiry_time"
               android:gravity="center"
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/btn_go"
            android:text="继续评论"
            android:textColor="@color/white"
            android:background="@drawable/button_corners_blue"
            android:layout_width="84dp"
            android:layout_below="@id/linay"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="36dp"
            android:layout_height="34dp"/>
    <Button
        android:id="@+id/btn_end"
        android:text="结束问诊"
        android:textColor="@color/white"
        android:background="@drawable/button_corners_blue"
        android:layout_width="84dp"
        android:layout_below="@id/linay"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="36dp"
        android:layout_height="34dp"/>
    <include layout="@layout/message_include" android:visibility="gone"/>
</RelativeLayout>