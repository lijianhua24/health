<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".view.RegisteredActivity">

    <ImageView
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/registered_icon_logo"
        android:src="@mipmap/logo" />
    <RelativeLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_400"
        android:layout_below="@id/registered_icon_logo"
        android:background="@drawable/login_yuanjiao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:alpha="0.3"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_400"
        android:layout_below="@id/registered_icon_logo"
        android:background="@drawable/login_yuanjiao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_65"
        android:alpha="0.6"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_400"
        android:layout_below="@+id/registered_icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/login_yuanjiao"
        >

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_icon_mail_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/iv_mail_n"
            />
        <EditText
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:singleLine="true"
            android:hint="请输入邮箱"
            android:id="@+id/registered_et_youxiang"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="20"
            android:paddingBottom="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_20"
            ></EditText>
        <CheckBox
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/registered_button"
            android:text="获取验证码"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:button="@null"
            android:layout_alignTop="@+id/iv_mail_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_33"
            android:textColor="#ffffff"
            android:id="@+id/registered_cb_code"
            ></CheckBox>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/register_icon_verification_code_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/icon_verification"
            android:layout_below="@id/registered_et_youxiang"

            />
        <EditText
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入验证码"
            android:id="@+id/registered_et_code"
            android:layout_below="@id/registered_et_youxiang"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            ></EditText>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_icon_lock_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/icon_lock_one"
            android:layout_below="@id/registered_et_code"
            />
        <EditText
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入密码"
            android:id="@+id/registered_et_pwd"
            android:layout_below="@id/registered_et_code"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_35"
            android:password="true"
            android:layout_marginTop="@dimen/dp_10"
            ></EditText>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/login_icon_hide_password_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_below="@id/registered_et_code"
            android:id="@+id/registered_icon_yanone"
            android:layout_marginTop="@dimen/dp_30"
            ></ImageView>

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_icon_lock_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/icon_lock_two"
            android:layout_below="@id/registered_et_pwd"
            />
        <EditText
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请再次输入密码"
            android:id="@+id/registered_et_pwdtwo"
            android:layout_below="@id/registered_et_pwd"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_35"
            android:password="true"
            android:layout_marginTop="@dimen/dp_10"
            ></EditText>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/login_icon_hide_password_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_below="@id/registered_et_pwd"
            android:id="@+id/registered_icon_yantwo"
            android:layout_marginTop="@dimen/dp_30"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/register_icon_invitatiion_code_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/icon_invitatiion"
            android:layout_below="@id/registered_et_pwdtwo"
            />
        <EditText
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入邀请码"
            android:id="@+id/registered_et_yaoqing"
            android:layout_below="@id/registered_et_pwdtwo"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_below="@id/registered_et_pwdtwo"
            android:textSize="@dimen/sp_10"
            android:text="选填"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_30"
            ></TextView>

        <Button
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_36"
            android:id="@+id/registered_bt_zhuce"
            android:layout_below="@id/registered_et_yaoqing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/login_button"
            android:text="注册"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            ></Button>
    </RelativeLayout>
</RelativeLayout>